<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#fff"
    android:layout_margin="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="20dp">
     
    <!-- Single ListItem -->
     
    <!-- Product Name -->

    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/lv_doc_id"
            />
         <TextView
             android:id="@+id/lv_docname"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text="Doctor"
             android:textStyle="bold"
             android:textSize="16dp"
             android:paddingBottom="10dp"
             android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lv_doc_specialization"
            android:paddingTop="5dp"
            android:text="Specialization"
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/lv_doc_hospital"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/doctor_subreason"
            android:text="Hospital"
            android:paddingTop="5dp"
            android:textSize="13dp" />


        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/lv_doc_degrees"
            android:layout_width="fill_parent"
            android:paddingTop="5dp"
            android:text="Degrees"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:textColor="@color/doctor_subreason"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/lv_doc_exp"
            android:layout_width="fill_parent"
            android:text="10 years"
            android:layout_height="wrap_content"
            android:textColor="@color/doctor_subreason"
            android:textSize="13dp"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:background="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>
</LinearLayout>
