<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="13dp">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.niharika.hospitalmanagementsystem.BookAppointmentActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="13dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="40dp"
            android:textColor="@android:color/black"
            android:text="Doctor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/book_doctor_name"
            android:textColor="@color/doctor_subreason"
            android:text="Doctor Name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Specialization"/>

        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="13dp"
            android:layout_height="wrap_content"
            android:id="@+id/book_doctor_specialization"
            android:textColor="@color/doctor_subreason"
            android:text="Specialization"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/edit_text_color"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="17dp"
        android:onClick="displayDPD"
        android:id="@+id/book_appointment_patient"
        android:text="Click to Select Date"/>

    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/edit_text_color"></LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:onClick="displayMorningSlots"
                android:drawableLeft="@drawable/morning"
                android:drawablePadding="15dp"
                android:text="Morning"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayMorningSlots"
            android:paddingLeft="15dp"
            android:text="10:00-12:00PM"
            android:textColor="@color/doctor_subreason" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/edit_text_color"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/layout_morning_slots"
        android:visibility="gone"
       >

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slots_morning"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/morning_slot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:paddingLeft="5dp"
            android:onClick="bookAppointment1"
            android:text="  10:00-11AM"
            android:textIsSelectable="true"
            android:textColor="#3a8369" />

        <RadioButton
            android:id="@+id/morning_slot2"
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:onClick="bookAppointment1"
            android:text="  11:00-12PM"
            android:textIsSelectable="true"
            android:textColor="#3a8369" />

    </RadioGroup>

        <LinearLayout
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/edit_text_color"></LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:onClick="displayAfternoonSlots"
            android:drawableLeft="@drawable/afternoon"
            android:drawablePadding="15dp"
            android:text="Afternoon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayAfternoonSlots"
            android:paddingLeft="15dp"
            android:text="1:30-5:00PM"
            android:textColor="@color/doctor_subreason" />
    </LinearLayout>

    <!-- -->

    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/edit_text_color"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:visibility="gone"
        android:gravity="center"
        android:id="@+id/layout_afternoon_slots"
        >

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slots_afternoon"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/afternoon_slot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:paddingLeft="5dp"
                android:onClick="bookAppointment2"
                android:text="  1:30-3:30PM"
                android:textIsSelectable="true"
                android:textColor="#3a8369" />

            <RadioButton
                android:id="@+id/afternoon_slot2"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:onClick="bookAppointment2"
                android:text="  3:30-5:00PM"
                android:textIsSelectable="true"
                android:textColor="#3a8369" />


        </RadioGroup>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/edit_text_color"></LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="13dp"
        android:layout_marginTop="13dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:onClick="displayEveningSlots"
            android:drawableLeft="@drawable/evening"
            android:drawablePadding="13dp"
            android:text="Evening"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayEveningSlots"
            android:paddingLeft="15dp"
            android:text="5:30-10:00PM"
            android:textColor="@color/doctor_subreason" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/edit_text_color"></LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:visibility="gone"
        android:gravity="center"
        android:id="@+id/layout_evening_slots"
        >

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slots_evening"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/evening_slot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:paddingLeft="5dp"
                android:onClick="bookAppointment3"
                android:text="  5:30-7:00PM"
                android:textIsSelectable="true"
                android:textColor="#3a8369" />

            <RadioButton
                android:id="@+id/evening_slot2"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:onClick="bookAppointment3"
                android:text="  7:00-8:30PM"
                android:textIsSelectable="true"
                android:textColor="#3a8369" />

            <RadioButton
                android:id="@+id/evening_slot3"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:onClick="bookAppointment3"
                android:text="  8:30-10:00PM"
                android:textIsSelectable="true"
                android:textColor="#3a8369" />
        </RadioGroup>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/edit_text_color"></LinearLayout>
    </LinearLayout>


    <EditText
        android:hint="Reason for Visit"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/reason_visit"
        />

    <Button
        android:layout_marginTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:text="Confirm Booking"
        android:paddingRight="13dp"
        android:paddingLeft="13dp"
        android:onClick="displayDialog"
        android:textColor="@color/button_text"/>


    </LinearLayout>
</LinearLayout>