<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/image_bg"
    android:orientation="horizontal"
    android:padding="5dip"
    android:layout_margin="20dp"
    >

    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_marginRight="5dip"
        android:orientation="vertical">


        <!-- Title Of Song-->
        <TextView
            android:id="@+id/lv_current_hosp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital Name"
            android:textColor="#040404"
            android:textSize="18dip"
            android:textStyle="bold"
            android:typeface="sans" />

        <!-- Artist Name -->

        <!-- Rightend Duration -->


        <TextView
            android:id="@+id/lv_current_doc_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#595252"
            android:textSize="17dip"
            android:layout_marginTop="4dip"
            android:text="Doctor name" />

        <TextView
            android:id="@+id/lv_current_reason_visit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#595252"
            android:textSize="15dip"
            android:layout_marginTop="4dip"
            android:text="Reason for visit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lv_current_date_booked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:gravity="right"
            android:text="Slot Chosen"
            android:textColor="#536364"
            android:textSize="13dip"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>