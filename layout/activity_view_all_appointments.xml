<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.niharika.hospitalmanagementsystem.ViewAllAppointments">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/current_day"
        android:padding="10dp"
        android:onClick="getCurrentAppointments"
        android:text="Current day Appointments"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prev_day"
        android:onClick="getPastAppointments"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="Past Appointments"/>

    <Button
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/future_day"
        android:onClick="getFutureAppointments"
        android:text="Future appointments"/>
</LinearLayout>
