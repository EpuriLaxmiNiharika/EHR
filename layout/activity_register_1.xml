<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    tools:context="com.example.niharika.hospitalmanagementsystem.RegisterActivity_1">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="72dp"
                android:gravity="center_vertical"
                android:text="What would you like to be called"
                android:textColor="@color/edit_text_color"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/textView" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:id="@+id/et2"
                android:paddingLeft="40dp"
                >

                    <EditText
                        android:id="@+id/reg_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/textView"
                        android:layout_alignRight="@+id/textView"
                        android:layout_below="@+id/textView"
                        android:layout_marginEnd="36dp"
                        android:layout_marginRight="36dp"
                        android:backgroundTint="@color/edit_text_border"
                        android:textColorHint="@color/edit_text_color"
                        android:textColor="@color/edit_text_color"
                        android:layout_marginTop="49dp"
                        android:ems="10" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"></LinearLayout>
        <TextView
        android:layout_marginTop="40dp"
        android:paddingLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_centerVertical="true"
        android:text="Please Enter your mobile Number"
        android:textColor="@color/edit_text_color"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/textView2" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TextLabel"
        android:id="@+id/et3"
        android:padding="35dp"
        >

        <EditText
            android:id="@+id/reg_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/edit_text_border"
            android:ems="10"
            android:inputType="phone"
            android:textColor="@color/edit_text_color"
            android:textColorHint="@color/edit_text_color" />
    </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:gravity="center_vertical"
            android:text="@string/enter_email"
            android:textColor="@color/edit_text_color"
            android:textSize="20dp"
            android:textStyle="bold"

            android:id="@+id/textView1" />

        <EditText
            android:id="@+id/reg_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="35dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="26dp"
            android:backgroundTint="@color/edit_text_border"
            android:ems="10"
            android:textColor="@color/edit_text_color"
            android:textColorHint="@color/edit_text_color"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/reg_name_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="47dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:onClick="next_page"
        android:src="@drawable/next" />

</RelativeLayout>
